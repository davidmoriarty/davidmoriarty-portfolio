---
import { cn } from "../utils/cn";

interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  class?: string;
}

const { level = 2, class: className = "" } = Astro.props;

const sizeClasses: Record<number, string> = {
  1: "text-5xl md:text-6xl",
  2: "text-4xl md:text-5xl",
  3: "text-3xl md:text-4xl",
  4: "text-2xl md:text-3xl",
  5: "text-xl md:text-2xl",
  6: "text-lg md:text-xl",
};

const classes = cn("font-bold", sizeClasses[level], className);
---

{
  level === 1 && (
    <h1 class={classes}>
      <slot />
    </h1>
  )
}
{
  level === 2 && (
    <h2 class={classes}>
      <slot />
    </h2>
  )
}
{
  level === 3 && (
    <h3 class={classes}>
      <slot />
    </h3>
  )
}
{
  level === 4 && (
    <h4 class={classes}>
      <slot />
    </h4>
  )
}
{
  level === 5 && (
    <h5 class={classes}>
      <slot />
    </h5>
  )
}
{
  level === 6 && (
    <h6 class={classes}>
      <slot />
    </h6>
  )
}
