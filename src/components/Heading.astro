---
import { cn } from "../utils/cn";

interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  class?: string;
}

const { level = 2, class: className = "" } = Astro.props;

const sizeClasses: Record<number, string> = {
  1: "text-5xl md:text-6xl",
  2: "text-4xl md:text-5xl",
  3: "text-3xl md:text-4xl",
  4: "text-2xl md:text-3xl",
  5: "text-xl md:text-2xl",
  6: "text-lg md:text-xl",
};

const weightClasses: Record<number, string> = {
  1: "font-extrabold",
  2: "font-black",
  3: "font-bold",
  4: "font-bold",
  5: "font-semibold",
  6: "font-medium",
};

const classes = cn(weightClasses[level], sizeClasses[level], className);
const Tag = `h${level}` as keyof HTMLElementTagNameMap;
---

<Tag class={classes}>
  <slot />
</Tag>
