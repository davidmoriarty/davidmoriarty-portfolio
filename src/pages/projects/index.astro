---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
import Container from "../../components/Container.astro";
import Heading from "../../components/Heading.astro";
import ProjectCard from "../../components/ProjectCard.astro";

const projects = [
  {
    title: "Task Manager",
    description: "Personal productivity app with task CRUD, categories, and filters",
    href: "/projects/task-manager",
    tags: ["TypeScript", "Astro", "Tailwind"],
  },
  {
    title: "Notes App",
    description: "Modern notes application with local storage and cloud sync",
    href: "/projects/notes-app",
    tags: ["TypeScript", "React", "Bun"],
  },
  {
    title: "Finance Dashboard",
    description: "Interactive dashboard with charts and real-time data visualization",
    href: "/projects/finance-dashboard",
    tags: ["Astro", "React", "TanStack"],
  },
  {
    title: "CLI + Web UI",
    description: "Command-line and web interface for unified workflows",
    href: "/projects/cli-web-ui",
    tags: ["Node.js", "TypeScript"],
  },
  {
    title: "Auth Starter",
    description: "Boilerplate authentication system with best practices",
    href: "/projects/auth-starter",
    tags: ["Bun", "Hono", "TanStack"],
  },
];
---

<Layout title="Projects">
  <Section>
    <Container class="max-w-4xl">
      <Heading level={1} class="mb-6">Projects</Heading>

      <p class="mb-8 text-lg">
        A curated selection of production-ready projects demonstrating end-to-end development skills.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          projects.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              href={project.href}
              tags={project.tags}
            />
          ))
        }
      </div>
    </Container>
  </Section>
</Layout>
