---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
import Container from "../../components/Container.astro";
import Heading from "../../components/Heading.astro";
import { cn } from "../../utils/cn";
import { projects } from "../../data/projects";

// ðŸ”¹ Export static paths for Astro
export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

// Grab the slug from the route
const { slug } = Astro.params;

// Find the project
const project = projects.find((p) => p.slug === slug);
if (!project) {
  throw new Error(`Project not found: ${slug}`);
}
const { title, description, tags } = project;
---

<Layout title={title}>
  <Section>
    <Container class="max-w-3xl">
      <Heading level={1}>{title}</Heading>
      <p class="mt-4 text-lg">{description}</p>

      {
        tags.length > 0 && (
          <ul class="mt-4 flex flex-wrap gap-2 text-xs">
            {tags.map((tag) => (
              <li class={cn("rounded px-2 py-1 bg-gray-200 dark:bg-gray-700")}>{tag}</li>
            ))}
          </ul>
        )
      }

      <div class="mt-8">
        <a
          href="/projects"
          class={cn(
            "inline-flex items-center justify-center rounded-md px-6 py-3 font-medium border",
            "border-gray-300 hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800",
          )}
        >
          Back to Projects
        </a>
      </div>
    </Container>
  </Section>
</Layout>
