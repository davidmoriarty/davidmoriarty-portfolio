---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
import Container from "../../components/Container.astro";
import Heading from "../../components/Heading.astro";
import { cn } from "../../utils/cn";
import { projects } from "../../data/projects";
import { tagColors } from "../../utils/tagColors";
import { tagIcons } from "../../utils/tagIcons";

export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);
if (!project) {
  throw new Error(`Project not found: ${slug}`);
}

const { title, description, tags = [], screenshots = [], features = [], repoUrl, liveUrl } = project;

const ogImage = screenshots[0] ?? "/images/og/default.png";
const pageUrl = new URL(`/projects/${project.slug}/`, Astro.site).toString();
const screenshot = screenshots[0];

// JSON-LD Project (SoftwareSourceCode works well for GitHub projects)
const projectJsonLd = {
  "@context": "https://schema.org",
  "@type": "SoftwareSourceCode",
  name: title,
  description,
  url: pageUrl,
  codeRepository: repoUrl,
  programmingLanguage: (tags ?? []).filter(Boolean),
  keywords: (tags ?? []).filter(Boolean).join(", "),
  image: screenshots.map((s) => (s.startsWith("http") ? s : new URL(s, Astro.site).toString())),
  author: {
    "@type": "Person",
    name: "David Moriarty",
    url: new URL("/", Astro.site).toString(),
  },
  ...(liveUrl ? { sameAs: [liveUrl] } : {}),
};
---

<Layout title={title} description={description} ogImage={ogImage}>
  <Section>
    <Container class="max-w-5xl">
      <Heading level={1}>{title}</Heading>
      <p class="mt-4 text-lg">{description}</p>

      {/* JSON-LD Project */}
      <script type="application/ld+json" set:html={JSON.stringify(projectJsonLd)} />
    </Container>

    {
      screenshot && (
        <Container class="py-5 max-w-5xl">
          <figure class="overflow-hidden rounded-lg border border-gray-200 dark:border-gray-700">
            <img src={screenshot} alt={`${title} screenshot`} class="w-full h-auto" loading="lazy" />
          </figure>
        </Container>
      )
    }

    <Container class="max-w-3xl pb-4">
      {
        (repoUrl || liveUrl) && (
          <div class="mt-6 flex flex-wrap gap-3">
            {repoUrl && (
              <a
                href={repoUrl}
                class={cn(
                  "inline-flex items-center justify-center rounded-md px-4 py-2 font-medium border",
                  "border-gray-300 hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800",
                )}
              >
                View repo
              </a>
            )}

            {liveUrl && (
              <a
                href={liveUrl}
                class={cn(
                  "inline-flex items-center justify-center rounded-md px-4 py-2 font-medium",
                  "bg-gray-900 text-white hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-900 dark:hover:bg-gray-200",
                )}
              >
                Live demo
              </a>
            )}
          </div>
        )
      }
    </Container>

    {
      tags.length > 0 && (
        <Container class="max-w-3xl py-2">
          <ul class="mt-4 flex flex-row flex-wrap items-center justify-baseline gap-2 text-xs">
            <li class="font-bold text-lg">Stack:</li>
            {tags.map((tag) => {
              const { light, dark, text } = tagColors[tag] ?? {
                light: "bg-gray-200",
                dark: "bg-gray-700",
                text: "text-gray-800 dark:text-gray-200",
              };

              const Icon = tagIcons[tag];

              return (
                <li
                  class={cn(
                    "inline-flex items-center gap-1.5 rounded font-bold text-xs px-2 py-1.5",
                    light,
                    "dark:" + dark,
                    text,
                  )}
                >
                  {Icon && <Icon class="w-3.5 h-3.5 text-current" />}
                  <span>{tag}</span>
                </li>
              );
            })}
          </ul>
        </Container>
      )
    }

    <Container class="max-w-3xl">
      {
        features.length > 0 && (
          <ul class="mt-6 list-disc pl-5 space-y-1">
            {features.map((f) => (
              <li>{f}</li>
            ))}
          </ul>
        )
      }
    </Container>

    <Container class="max-w-3xl">
      <div class="mt-10">
        <a
          href="/projects"
          class={cn(
            "inline-flex items-center justify-center rounded-md px-6 py-3 font-medium border",
            "border-gray-300 hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800",
          )}
        >
          Back to Projects
        </a>
      </div>
    </Container>
  </Section>
</Layout>
