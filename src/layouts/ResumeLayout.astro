---
// src/layouts/ResumeLayout.astro
import "../styles/resume.css";

interface Props {
  title?: string;
  mode?: "web" | "print";
}

const { title = "Resume", mode = "web" } = Astro.props;

const mainClass = `resume ${mode === "print" ? "is-print" : "is-web"}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body>
    <main class={mainClass}>
      <slot />
    </main>

    <footer class="resume__footer">
      <a href="/" class="resume__back-link"> Back to profile </a>
    </footer>

    <script src="/scripts/resume-print.js" defer></script>
  </body>
</html>
