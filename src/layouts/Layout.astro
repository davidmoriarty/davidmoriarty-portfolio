---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { setTitle } from "../utils/title";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en" class="h-full scroll-smooth font-sans antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Full-stack software developer portfolio showcasing modern web applications built with Astro, Bun, and Tailwind CSS."
    />
    <meta name="color-scheme" content="light dark" />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{setTitle(title)}</title>
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <!-- Navbar component -->
    <Navbar />

    <main class="flex flex-col flex-1">
      <slot />
    </main>

    <!-- Footer component -->
    <Footer />
  </body>
</html>
